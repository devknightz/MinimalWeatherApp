<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Landing" parent="AppTheme">
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>


    <style name="AppTheme.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.SwitchStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/colorPrimaryInvert</item>
        <item name="colorControlActivated">@color/colorPrimaryInvert</item>
    </style>

    <style name="AppTheme.Landing.BottomBar.Text" parent="AppTheme.TextStyle">
        <!--<item name="android:textColor">@color/primaryInvertTextColor</item>-->
    </style>

    <style name="AppTheme.Landing.BottomBar.Title" parent="AppTheme.Landing.BottomBar.Text">
        <item name="android:textSize">@dimen/app_text_size_large</item>
    </style>

    <style name="AppTheme.Landing.BottomBar.SwitchStyle" parent="AppTheme.SwitchStyle">
        <!--<item name="android:textColor">@color/primaryInvertTextColor</item>-->
    </style>

    <style name="AppTheme.Landing.BottomBar.SwitchStyleTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimaryInvert</item>
        <item name="colorControlActivated">@color/colorPrimaryInvert</item>
    </style>


    <style name="AppTheme.Landing.CityTextStyle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/landingCityTextColor</item>
    </style>

    <style name="AppTheme.Landing.TimeTextStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppTheme.Landing.TemperatureTextStyle" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/weatherTemperatureTextColor</item>
    </style>

    <style name="AppTheme.Landing.TimeMessageTextStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Landing.WeatherInfoLabelTextStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/spacing_micro</item>
    </style>

    <style name="AppTheme.Landing.WeatherInfoTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Landing.ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/progressBarColor</item>
        <item name="android:progressBackgroundTint">@color/progressBarBackgroundTint</item>
    </style>

</resources>
